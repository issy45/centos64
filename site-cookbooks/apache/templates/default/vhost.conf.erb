ServerName localhost
NameVirtualHost *:80

<VirtualHost *:80>
    DocumentRoot /home/vagrant/public_html
    ServerName local.vagrant.com
    ServerAlias *.local.vagrant.com
    ServerAdmin root@vagrant.com
    LogFormat "[%V] %h %l %u %t \"%r\" %>s %b \"%{Referer}i\" \"%{User-Agent}i\"" custom
    ErrorLog /etc/httpd/logs/error_log
    CustomLog /etc/httpd/logs/access_log custom
    SetEnv FUEL_ENV test
    <Directory "/home/vagrant/public_html">
        Options FollowSymLinks ExecCGI
        Options Multiviews
        AllowOverride All
        Order allow,deny
        Allow from all
    </Directory>
</VirtualHost>